pipeline {
  agent {
    docker {
      image 'python:3.8-slim'
      args '-u root:root'
    }
  }
  stages {
    stage('install deps & test') {
      steps {
        sh '''
          python -m venv .venv
          . .venv/bin/activate
          pip install -r requirements.txt
          pytest
        '''
      }
    }
  }
}
